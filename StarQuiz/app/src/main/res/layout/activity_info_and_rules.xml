<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background = "@color/appBackground"
    tools:context=".InfoAndRulesActivity">

    <Button
        android:id="@+id/infoAndRulesReturnButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginBottom="64dp"
        android:backgroundTint="@color/buttonBackground"
        android:minWidth="154.21dp"
        android:minHeight="55.45dp"
        android:text="@string/returnButtonText"
        android:textAllCaps="false"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/infoAndRulesOkButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="64dp"
        android:backgroundTint="@color/buttonBackground"
        android:minWidth="154.21dp"
        android:minHeight="55.45dp"
        android:text="@string/okButtonText"
        android:textAllCaps="false"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintStart_toEndOf="@+id/infoAndRulesReturnButton" />

    <TextView
        android:id="@+id/infoAndRulesDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:width="292dp"
        android:text="@string/descriptionInfo_rules"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/infoAndRulesTitleView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="84dp"
        android:minWidth="250dp"
        android:layout_marginTop="40dp"
        android:background="@color/titleBackground"
        android:gravity="center"
        android:text="@string/info_rulesTitle"
        android:textColor="@color/titleTextBackground"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/info_rulesTitle"
        android:textColor="@color/titleTextBackground"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="@+id/infoAndRulesTitleView"
        app:layout_constraintEnd_toEndOf="@+id/infoAndRulesTitleView"
        app:layout_constraintStart_toStartOf="@+id/infoAndRulesTitleView"
        app:layout_constraintTop_toTopOf="@+id/infoAndRulesTitleView" />
</androidx.constraintlayout.widget.ConstraintLayout>